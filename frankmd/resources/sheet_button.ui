<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <requires lib="Adw" version="1.0" />
  <template class="SheetButton" parent="GtkButton">
    <style>
      <class name="flat" />
    </style>
    <child>
      <object class="GtkBox" id="box">
        <property name="orientation">vertical</property>
        <property name="margin_top">10</property>
        <property name="margin_bottom">10</property>
        <child>
          <object class="GtkLabel" id="title">
            <property name="label">Title goes here</property>
            <property name="xalign">0.0</property>
            <attributes>
              <attribute name="weight" value="PANGO_WEIGHT_ULTRABOLD" />
            </attributes>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="preview">
            <property name="label">Preview goes here</property>
            <property name="xalign">0.0</property>
            <property name="ellipsize">PANGO_ELLIPSIZE_END</property>
            <property name="wrap">True</property>
            <property name="lines">1</property>
            <attributes>
              <attribute name="weight" value="PANGO_WEIGHT_BOOK" />
            </attributes>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>